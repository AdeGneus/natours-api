extends base

block content
	main.main
		.login-form
			h2.heading-secondary.ma-bt-lg Forgot Password
			p.form__login Enter your email and we'll send you a link to reset your password
			form.form.form--forgot
				.form__group
					label.form__label(for='email') Email address
					input#email.form__input(type='email', placeholder='you@example.com', required)
				.form__group
					button.btn.btn--green.btn--forgot Submit